<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project name="InterWebJ.createjar" default="copy-jars" basedir=".">
	
	<delete file="./interwebj-core.jar" />

	<target name="create-core-jar">
		<jar destfile="./interwebj-core.jar" includes="**/*.class" basedir="bin">
			<zipfileset dir="config" includes="config.xml" fullpath="config/config.xml" />
			<fileset dir="src" includes="log4j.properties" />
		</jar>
	</target>

	<target name="copy-jars" depends="create-core-jar">
		<copy file="./interwebj-core.jar" tofile="../InterWebJ-Tomcat/WebContent/WEB-INF/lib/interwebj-core.jar" overwrite="true" />
		<copy file="./interwebj-core.jar" tofile="../FlickrConnector/lib/interwebj-core.jar" overwrite="true" />
		<copy file="./interwebj-core.jar" tofile="../YouTubeConnector/lib/interwebj-core.jar" overwrite="true" />
		<copy file="./interwebj-core.jar" tofile="../InterWebConnector/lib/interwebj-core.jar" overwrite="true" />
		<copy file="./interwebj-core.jar" tofile="../SlideShareConnector/lib/interwebj-core.jar" overwrite="true" />
	</target>
</project>